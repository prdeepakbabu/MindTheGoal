# MindTheGoal Environment Configuration
# =====================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================
# AWS Configuration
# ===========================

# AWS Region for Bedrock
AWS_REGION=us-west-2

# AWS Profile (optional - if using named profiles)
# Leave empty to use default credentials chain
AWS_PROFILE=

# ===========================
# Model Configuration
# ===========================

# Bedrock Model ID for Claude 3.7 Sonnet
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# Temperature settings (0.0 - 1.0)
# Lower = more deterministic, Higher = more creative
JUDGE_TEMPERATURE=0.1
CHAT_TEMPERATURE=0.7

# Maximum tokens per response
MAX_TOKENS=4096

# ===========================
# Server Configuration
# ===========================

# Backend server host and port
HOST=0.0.0.0
PORT=8000

# Enable debug mode (set to false in production)
DEBUG=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================
# Database Configuration
# ===========================

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///./mindthegoal.db

# ===========================
# Logging Configuration
# ===========================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=text

# ===========================
# Dataset Configuration
# ===========================

# Directory for datasets
DATASETS_DIR=datasets/data

# Default sample size for evaluation (set to 0 for full dataset)
DEFAULT_SAMPLE_SIZE=100

# ===========================
# Rate Limiting
# ===========================

# Maximum LLM requests per minute
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Maximum concurrent evaluation sessions
MAX_CONCURRENT_EVALUATIONS=5

# ===========================
# Session Configuration
# ===========================

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Maximum messages per session
MAX_MESSAGES_PER_SESSION=100

# ===========================
# Feature Flags
# ===========================

# Enable streaming responses
ENABLE_STREAMING=true

# Enable multi-teacher ensemble (requires multiple model calls)
ENABLE_MULTI_TEACHER=false

# Enable caching of evaluation results
ENABLE_CACHE=true
